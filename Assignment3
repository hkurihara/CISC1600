// cin with strings
#include <iostream>
#include <string>
using namespace std;



int main ()

{
string a;
int b;
double c;

cout << "What is your name?" <<  endl;
getline(cin, a);

cout << "Enter integer:" << endl;
cin >> b;

cout << "Enter double:" << endl;
cin >> c;


cout << "Hi " << a << ", I've calculated that " << b << "+" << c << "=" << b + c << " and " << b << "-" << c << "=" << b - c <<  endl;
return 0;

}
