// cin with strings
#include <iostream>
#include <string>
using namespace std;

int main ()

{
string a;
string b;
string c;

cout << "What's your name?";
getline(cin, a);
cout << "What's your age?";
getline(cin, b);
cout << "What's your favorite thing?";
getline(cin, c);
cout << "Hi," << a << "." << endl;
cout << "I know you are " << b << "years old and like " << c << "." << endl;
}
