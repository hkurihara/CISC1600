// cin with strings
#include <iostream>
#include <string>
using namespace std;

int main ()

{
string a;
getline(cin, a);

string b;
getline(cin, b);

string c;
getline(cin, c);

cout << "Hi, my name is " << a << "." << endl;
cout << "I am " << b  << "years old and my favorite thing is " << c << "." << endl;
}
